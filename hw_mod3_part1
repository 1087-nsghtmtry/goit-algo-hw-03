from datetime import datetime, date
"""
Function that takes date from input field entered as argument
and returns an amount of days still left, or days already passed

If the format of entered date is not correct, the user get a note with the option 
to enter his date again
"""

def get_days_from_today(date):
    try:
        date_today = datetime.today().date()
        date_entered = datetime.strptime(date, "%Y.%m.%d").date()
        differ = (date_entered - date_today).days
        if date_entered > date_today:
            print(differ, "days still left")
        else:
            print(abs(differ), "days already past")
    except ValueError:
        print("Entered data has an incorrect format.")
        corrected_date = input(f"Please try again and enter format like yyyy.mm.dd: ")
        get_days_from_today(corrected_date)


get_date = input(f"Please enter the date: ")
print(get_date)
get_days_from_today(get_date)
